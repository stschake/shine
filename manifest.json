{
  "name": "Shine",
  "version": "0.1",
  "description": "Shine displays a bar over pages on reddit, helping you submit, vote on, save, and view comments for web pages.",
  "permissions": [
    "tabs",
    "http://*/*"
  ],
  "icons": {
    "48" : "images/shine-48.png",
    "128" : "images/shine-128.png"
  },
  "page_action": {
    "default_icon": "images/reddit.png",
    "default_title": "Show reddit information"
  },
  "background_page" : "background.html",
  "content_scripts": [
    {
      "matches": ["http://*.reddit.com/*"],
      "js": ["jquery-1.4.2.min.js", "redditContent.js"]
    }
  ]
}
